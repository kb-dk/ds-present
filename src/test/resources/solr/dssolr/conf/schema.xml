<?xml version="1.0" encoding="UTF-8"?>

<schema name="example" version="1.6">
  <uniqueKey>id</uniqueKey>
  
  
  
   <!-- START FIELDS  -->
   <!-- Default solr field -->
  <field name="_version_" type="plong" indexed="false" stored="false"/> 
  
  <field name="id" type="string" multiValued="false" indexed="true" required="true" stored="true"/>    
  <field name="identifier_local" type="string" multiValued="false" indexed="true" required="false" stored="true"/>
  <field name="cataloging_language" type="string" multiValued="false" indexed="true" required="false" stored="true"/>
  <field name="collection" type="string" multiValued="false" indexed="true" required="false" stored="true"/>
  <field name="creator" type="string" multiValued="true" indexed="true" required="false" stored="true"/>
  <field name="creator_family_name" type="string" multiValued="true" indexed="true" required="false" stored="true"/>
  <field name="creator_given_name" type="string" multiValued="true" indexed="true" required="false" stored="true"/>
  <field name="subject" type="string" multiValued="true" indexed="true" required="false" stored="true"/>
  <field name="subject_name" type="string" multiValued="true" indexed="true" required="false" stored="true"/>
  <field name="subject_date_of_birth" type="string" multiValued="true" indexed="true" required="false" stored="true"/>
  <field name="subject_date_of_death" type="string" multiValued="true" indexed="true" required="false" stored="true"/>
  <field name="subject_terms_of_address" type="string" multiValued="true" indexed="true" required="false" stored="true"/>
  <field name="type_of_resource" type="string" multiValued="true" indexed="true" required="false" stored="true"/>
  <field name="file_size" type="string" multiValued="false" indexed="true" required="false" stored="true"/>






  <!-- END FIELDS  -->
  
  
  
  <!-- START FIELDTYPES  -->
  <fieldType name="boolean" class="solr.BoolField" sortMissingLast="true"/>   
  <fieldType name="pdate" class="solr.DatePointField" docValues="true"/>  
  <fieldType name="pdouble" class="solr.DoublePointField" docValues="true"/>  
  <fieldType name="pfloat" class="solr.FloatPointField" docValues="true"/>  
  <fieldType name="pint" class="solr.IntPointField" docValues="true"/>
  <fieldType name="plong" class="solr.LongPointField" docValues="true"/>
  <fieldType name="string" class="solr.StrField" sortMissingLast="true"/>
  
  
  <fieldType name="text_da" class="solr.TextField" positionIncrementGap="100">
    <analyzer>
      <tokenizer name="standard"/>
      <filter name="lowercase"/>
      <filter name="stop" format="snowball" ignoreCase="true" words="lang/stopwords_da.txt"/>
      <filter name="snowballPorter" language="Danish"/>
    </analyzer>
  </fieldType>
  <fieldType name="text_en" class="solr.TextField" positionIncrementGap="100">
    <analyzer type="index">
      <tokenizer name="standard"/>
      <filter name="stop" ignoreCase="true" words="lang/stopwords_en.txt"/>
      <filter name="lowercase"/>
      <filter name="englishPossessive"/>
      <filter name="keywordMarker" protected="protwords.txt"/>
      <filter name="porterStem"/>
    </analyzer>
    <analyzer type="query">
      <tokenizer name="standard"/>
      <filter name="synonymGraph" expand="true" ignoreCase="true" synonyms="synonyms.txt"/>
      <filter name="stop" ignoreCase="true" words="lang/stopwords_en.txt"/>
      <filter name="lowercase"/>
      <filter name="englishPossessive"/>
      <filter name="keywordMarker" protected="protwords.txt"/>
      <filter name="porterStem"/>
    </analyzer>
  </fieldType>

  
  <fieldType name="text_gen_sort" class="solr.SortableTextField" positionIncrementGap="100" multiValued="true">
    <analyzer type="index">
      <tokenizer name="standard"/>
      <filter name="stop" ignoreCase="true" words="stopwords.txt"/>
      <filter name="lowercase"/>
    </analyzer>
    <analyzer type="query">
      <tokenizer name="standard"/>
      <filter name="stop" ignoreCase="true" words="stopwords.txt"/>
      <filter name="synonymGraph" expand="true" ignoreCase="true" synonyms="synonyms.txt"/>
      <filter name="lowercase"/>
    </analyzer>
  </fieldType>
  <fieldType name="text_general" class="solr.TextField" positionIncrementGap="100">
    <analyzer type="index">
      <tokenizer name="standard"/>
      <filter name="stop" ignoreCase="true" words="stopwords.txt"/>
      <filter name="lowercase"/>
    </analyzer>
    <analyzer type="query">
      <tokenizer name="standard"/>
      <filter name="stop" ignoreCase="true" words="stopwords.txt"/>
      <filter name="synonymGraph" expand="true" ignoreCase="true" synonyms="synonyms.txt"/>
      <filter name="lowercase"/>
    </analyzer>
  </fieldType>
 <!-- END FIELDTYPES  -->
 
  <!-- START COPYFIELD  -->
    <!-- <copyField source="author" dest="text"/> -->
  <!-- END COPYFIELD  -->    
    
    
 </schema>