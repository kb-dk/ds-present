<?xml version="1.0" encoding="UTF-8"?>

<schema name="example" version="1.6">
  <uniqueKey>id</uniqueKey>
  
  
  
   <!-- START FIELDS  -->
   <!-- Default solr field -->
  <field name="_version_" type="plong" indexed="false" stored="false"/> 
  
  <field name="id" type="string" multiValued="false" indexed="true" required="true" stored="true"/>    
  <field name="identifier_local" type="string"/>
  <field name="cataloging_language" type="string"/>
  <field name="genre" type="string"/>
  <field name="collection" type="string"/>

  <!-- Fields on creator -->
  <field name="creator_name" type="text_general" multiValued="true"/>
  <field name="creator_full_name" type="text_general" multiValued="true"/>
  <field name="creator_family_name" type="text_general" multiValued="true"/>
  <field name="creator_given_name" type="text_general" multiValued="true"/>
  <field name="creator_terms_of_address" type="text_general" multiValued="true"/>
    
  <field name="area" type="text_general" multiValued="false"/>
  <field name="topic" type="text_general" multiValued="true"/>
  <field name="subject_name" type="text_general" multiValued="true"/>
  <field name="subject_full_name" type="text_general" multiValued="true"/>
  <field name="subject_family_name" type="text_general" multiValued="true"/>
  <field name="subject_given_name" type="text_general" multiValued="true" />


  

  <!-- Fields on production of physical and digital object. -->
  <!-- TODO: Format as date -->
  <field name="date_created" type="string"/>
  <field name="production_date_start" type="string"/>
  <field name="production_date_end" type="string"/>
  <field name="digital_surrogate_production_date" type="string"/>

  <!-- Fields on subject -->
  
  <field name="subject_date_of_birth" type="string" multiValued="true"/>
  <field name="subject_date_of_death" type="string" multiValued="true"/>
  <field name="subject_terms_of_address" type="text_general" multiValued="true"/>
  <field name="type_of_resource" type="string" multiValued="true"/>

  <field name="file_size" type="pint"/>
  <field name="image_height" type="pint"/>
  <field name="image_width" type="pint"/> 
  
  <field name="freetext" type="freetext" multiValued="true"/>


  <!--  Fields related to copyright and access conditions -->
  <field name="access_blokeret" type="boolean" multiValued="false" indexed="true" required="false" stored="true"/>
  <field name="access_pligtafleveret" type="boolean" multiValued="false" indexed="true" required="false" stored="true"/>
  <field name="access_ejermaerke" type="boolean" multiValued="false" indexed="true" required="false" stored="true"/>
  <field name="access_note" type="string"/>                 
  <field name="access_skabelsesaar" type="pint" multiValued="false" indexed="true" required="false" stored="true"/>
  <field name="access_ophavsperson_doedsaar" type="pint" multiValued="false" indexed="true" required="false" stored="true"/> <!--  TODO is required -->
  <field name="access_searlige_visningsvilkaar" type="string"/>
  <field name="access_materiale_type" type="string"/>
  <!-- Temporary set by rettighedsudtreakkeren -->
  <field name="imageurl" type="string"/>


  <!-- END FIELDS  -->
  
  
  <!-- START FIELDTYPES  -->
  <fieldType name="boolean" class="solr.BoolField" sortMissingLast="true"/>   
  <fieldType name="pdate" class="solr.DatePointField" docValues="true"/>  
  <fieldType name="pdouble" class="solr.DoublePointField" docValues="true"/>  
  <fieldType name="pfloat" class="solr.FloatPointField" docValues="true"/>  
  <fieldType name="pint" class="solr.IntPointField" multiValued="false" indexed="true" required="false" stored="true" docValues="false"/>
  <fieldType name="plong" class="solr.LongPointField" docValues="true"/>
  <fieldType name="string" class="solr.StrField" sortMissingLast="true" indexed="true" required="false" stored="true" docValues="false"/>
  
  
  
  <fieldType name="text_da" class="solr.TextField" positionIncrementGap="100">
    <analyzer>
      <tokenizer name="standard"/>
      <filter name="lowercase"/>
      <filter name="stop" format="snowball" ignoreCase="true" words="lang/stopwords_da.txt"/>
      <filter name="snowballPorter" language="Danish"/>
    </analyzer>
  </fieldType>
  <fieldType name="text_en" class="solr.TextField" positionIncrementGap="100">
    <analyzer type="index">
      <tokenizer name="standard"/>
      <filter name="stop" ignoreCase="true" words="lang/stopwords_en.txt"/>
      <filter name="lowercase"/>
      <filter name="englishPossessive"/>
      <filter name="keywordMarker" protected="protwords.txt"/>
      <filter name="porterStem"/>
    </analyzer>
    <analyzer type="query">
      <tokenizer name="standard"/>
      <filter name="synonymGraph" expand="true" ignoreCase="true" synonyms="synonyms.txt"/>
      <filter name="stop" ignoreCase="true" words="lang/stopwords_en.txt"/>
      <filter name="lowercase"/>
      <filter name="englishPossessive"/>
      <filter name="keywordMarker" protected="protwords.txt"/>
      <filter name="porterStem"/>
    </analyzer>
  </fieldType>

  
  <fieldType name="text_gen_sort" class="solr.SortableTextField" positionIncrementGap="100" multiValued="true">
    <analyzer type="index">
      <tokenizer name="standard"/>
      <filter name="stop" ignoreCase="true" words="lang/stopwords_da.txt"/>
      <filter name="lowercase"/>
    </analyzer>
    <analyzer type="query">
      <tokenizer name="standard"/>
      <filter name="stop" ignoreCase="true" words="lang/stopwords_da.txt"/>
      <filter name="synonymGraph" expand="true" ignoreCase="true" synonyms="synonyms.txt"/>
      <filter name="lowercase"/>
    </analyzer>
  </fieldType>
  
     
  <fieldType name="text_general" class="solr.TextField" multiValued="false" indexed="true" required="false" stored="true" positionIncrementGap="100">
    <analyzer type="index">
      <tokenizer name="standard"/>
      <filter name="stop" ignoreCase="true" words="lang/stopwords_da.txt"/>
      <filter name="lowercase"/>
    </analyzer>
    <analyzer type="query">
      <tokenizer name="standard"/>
      <filter name="stop" ignoreCase="true" words="lang/stopwords_da.txt"/>
      <filter name="lowercase"/>
    </analyzer>
  </fieldType>
  
   <fieldType name="freetext" class="solr.TextField" multiValued="false" indexed="true" required="false" stored="true" positionIncrementGap="100">
    <analyzer type="index">
      <tokenizer name="standard"/>
      <charFilter name="mapping" mapping="mapping-FoldToASCII.txt"/>    
      <filter name="stop" ignoreCase="true" words="lang/stopwords_da.txt"/>
      <filter name="lowercase"/>
    </analyzer>
    <analyzer type="query">
      <tokenizer name="standard"/>
      <filter name="stop" ignoreCase="true" words="lang/stopwords_da.txt"/>
      <charFilter name="mapping" mapping="mapping-FoldToASCII.txt"/>
      <filter name="lowercase"/>
    </analyzer>
  </fieldType>
  
 <!-- END FIELDTYPES  -->
 
 
 
  <!-- START COPYFIELD  -->
    <copyField source="creator_name" dest="freetext"/> 
    <copyField source="creator_full_name" dest="freetext"/>
    <copyField source="creator_given_name" dest="freetext"/>
    <copyField source="creator_terms_of_address" dest="freetext"/>
    <copyField source="area" dest="freetext"/>
    <copyField source="topic" dest="freetext"/>
    <copyField source="subject_name" dest="freetext"/>
    <copyField source="subject_full_name" dest="freetext"/>
    <copyField source="subject_family_name" dest="freetext"/>
    <copyField source="subject_given_name" dest="freetext"/>
    
        
    
  <!-- END COPYFIELD  -->    
     
    
 </schema>